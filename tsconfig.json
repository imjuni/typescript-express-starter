{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "importHelpers": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "pretty": true,
    "strict": true,
    "sourceMap": true,
    "outDir": "dist/",
    "lib": [
      "dom",
      "es5",
      "es6",
      "es7",
      "es2017"
    ],
    "typeRoots": [
      "node_modules/@types",
      "src/@types"
    ]
  },
  "filesGlob": [
    "**/*.ts",
    "!node_modules/**/*"
  ],
  "exclude": [
    "node_modules",
    "server/**",
    "dist/**",
    "webpack.config.dev.ts",
    "webpack.config.prod.ts"
  ]
}
